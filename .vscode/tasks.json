{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": "$gcc",
            "windows": {
                "command": "cmake .. && mingw32-make"
            },
            "linux": {
                "command": "bash"
            },
		},
		{
            "label": "build & run tests",
			"type": "shell",
            "group": {
				"kind": "test",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
            "problemMatcher": "$gcc",
            "windows": {
                "command": "mingw32-make && ./bin/CosmicExplorer.exe --exit"
            },
            "linux": {
                "command": "bash"
            },
        },
        {
            "label": "clean",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
            "windows": {
                "command": "mingw32-make clean"
			},
            "linux": {
                "command": "bash"
            }
        },
        {
            "label": "run",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
            "windows": {
                "command": "./bin/CosmicExplorer.exe"
			},
            "linux": {
                "command": "bash"
            }
        }
    ]
}