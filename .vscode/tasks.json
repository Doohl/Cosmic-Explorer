{
	"version": "2.0.0",
	"options": {
		"shell": {
			"executable": "cmd.exe",
			"args": [
				"/d", "/c",
				"C:\\Program^ Files^ ^(x86^)\\Microsoft^ Visual^ Studio\\2019\\Community\\Common7\\Tools\\VsDevCmd.bat",
				"&&"
			]
		}
	},
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": "$msCompile",
            "windows": {
				"command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug -DCMAKE_C_COMPILER=\"cl.exe\" -DCMAKE_CXX_COMPILER=\"cl.exe\" .. && ninja"
            },
            "linux": {
                "command": "cmake .. && make"
            },
		},
		{
            "label": "build & run tests",
			"type": "shell",
            "group": {
				"kind": "test",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
            "problemMatcher": "$gcc",
            "windows": {
                "command": "mingw32-make tests && cd bin && ./tests.exe"
            },
            "linux": {
                "command": "bash"
            },
        },
        {
            "label": "clean",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
            "windows": {
                "command": "mingw32-make clean"
			},
            "linux": {
                "command": "bash"
            }
        },
        {
            "label": "run",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
            "windows": {
                "command": "./bin/CosmicExplorer.exe"
			},
            "linux": {
                "command": "bash"
            }
        }
    ]
}